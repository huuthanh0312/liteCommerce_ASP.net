@model LiteCommerce.DomainModels.OrderDetail

<form method="post" action="~/Order/SaveOrderDetail/@Model.OrderID">
    @Html.HiddenFor(m => m.OrderDetailID)
    @Html.HiddenFor(m => m.OrderID)
    <div class="form-group">
        <label>Tên hàng hóa:</label>
       @Html.DropDownListFor(m => m.ProductID,SelectListHelper.Products(),new { @class = "form-control"})
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Số lượng:</label>
                @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control",@value = "0"})
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Đơn giá:</label>
                @Html.TextBoxFor(m => m.SalePrice, new { @class = "form-control", @value = "0" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Order/Edit/@Model.OrderID" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>

