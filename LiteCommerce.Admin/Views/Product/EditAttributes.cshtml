@model LiteCommerce.DomainModels.ProductAttribute
@{
    Layout = null;
}
<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Thêm thuộc tính của mặt hàng</h3>
    </div>
    <div class="box-body">
        <form id="formSaveInput" onsubmit="return saveProductAttributes();">
            @Html.HiddenFor(m => m.AttributeID)
            @Html.HiddenFor(m => m.ProductID)
            <div class="form-group">
                <label>Tên Thuộc Tính:</label>
                @Html.TextBoxFor(m => m.AttributeName, new { @class = "form-control", @autofocus = "autofocus" })
                <span style="color:red;" id="errorAttributeName"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Giá Trị Thuộc Tính:</label>
                        @Html.TextBoxFor(m => m.AttributeValue, new { @class = "form-control" })
                        <span style="color:red;" id="errorAttributeValue"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Display Order:</label>
                        @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                </div>
                <div class="col-md-6 text-right">
                    <a href="javascript:;" onclick="editProduct(@Model.ProductID)" class="btn btn-warning">
                        <i class="fa fa-window-close"></i> Bỏ qua
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
