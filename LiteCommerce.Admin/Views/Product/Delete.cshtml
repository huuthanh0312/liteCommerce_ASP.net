@model LiteCommerce.DomainModels.Product
@{
    Layout = null;
}

<form class="form-horizontal" id="formSaveInput" onsubmit="return (confirmDeleteProduct(@Model.ProductID));">
    <div class="form-group">
        <label class="col-md-1"></label>
        <div class="col-sm-11">
            <p class="form-control-static">&emsp;&emsp;<img src="http://dummyimage.com/250x250.png/5fa2dd/ffffff&text=Product" width="120" height="120"></p>
        </div><br />

        <label class="control-label col-sm-2">Tên hàng hóa:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.ProductName</p>
        </div>

        <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.SupplierID</p>
        </div>

        <label class="control-label col-sm-2">Tên loại hàng:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CategoryID</p>
        </div>

        <label class="control-label col-sm-2">Đơn vị tính:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Unit</p>
        </div>

        <label class="control-label col-sm-2">Giá:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Price</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-offset-2 col-sm-10">
            <p class="text-danger" style="font-size:18px">
                Bạn có chắc chắn muốn xóa hàng hóa này khỏi hệ thống hay không?
            </p>
        </div>
        <div class="col-lg-offset-2 col-sm-10">
            <button type="submit" class="btn btn-danger">Đồng ý xóa</button>
            <a href="javascript:;" onclick="getProducts()" class="btn btn-warning">Bỏ qua</a>
        </div>
    </div>
</form>


