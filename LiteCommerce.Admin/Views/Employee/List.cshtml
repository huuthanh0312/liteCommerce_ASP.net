@model LiteCommerce.Admin.Models.EmployeePaginationQueryResult
@{
    Layout = null;
}
<div class="container-fluid">
    <div class="text-left">
        <p>Có tất cả <strong>@Model.RowCount</strong> nhân viên. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>
    </div>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th class="col-lg-1">Họ</th>
                <th class="col-lg-1">Tên</th>
                <th class="col-lg-1">Ngày sinh</th>
                <th class="col-lg-1">Ảnh</th>
                <th class="col-lg-3">Ghi chú</th>
                <th class="col-lg-1">Email</th>
                <th class="col-lg-1">Mật khẩu</th>
                <th class="text-right col-lg-1">
                    <a href="javascript:;" onclick="addEmployee()" class="btn btn-xs btn-primary">
                        <i class="fa fa-plus"></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Item in Model.Data)
            {
                <tr>
                    <td>@Item.LastName</td>
                    <td>@Item.FirstName</td>
                    <td>@Item.BirthDate</td>
                    <td><img src="@Item.Photo" width="60" height="70"></td>
                    <td>@Item.Notes</td>
                    <td>@Item.Email</td>
                    <td>@Item.Password</td>
                    <td class="text-right">
                        <a href="javascript:;" onclick="editEmployee(@Item.EmployeeID)" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="javascript:;" onclick="deleteEmployee(@Item.EmployeeID)" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <ul class="pagination">
            @for (int page = 1; page <= Model.PageCount; page++)
            {
                if (page == Model.Page)
                {
                    <li class="active"><a href="javascript:;">@page</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="getEmployees(@page)">@page</a></li>
                }
            }
        </ul>
    </div>
</div>