@model LiteCommerce.DomainModels.Employee
@{
    Layout = null;
}
<div class="box box-primary">
    <div class="box-body">
        <h3 class="text-center">@ViewBag.Title</h3>
        <hr />
        <form id="formSaveInput" onsubmit="return (saveEmployee());">
            @Html.HiddenFor(m => m.EmployeeID)
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Họ:</label>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @autofocus = "autofocus" })
                        <span style="color:red;" id="errorLastName"></span>
                        <br />
                        <label>Ngày sinh:</label>
                        @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control", @id = "datepicker" })
                        <span style="color:red;" id="errorBirthDate"></span>
                        <br />
                        <label>Email:</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        <span style="color:red;" id="errorEmail"></span>
                        <br />
                    </div>
                </div>
                <div class="col-md-6">
                    <label>Tên:</label>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    <span style="color:red;" id="errorFirstName"></span>
                    <br />
                    <label>Ảnh:</label>
                    @Html.TextBoxFor(m => m.Photo, new { @class = "form-control" })
                    <br />
                    <label>Mật khẩu:</label>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                    <span style="color:red;" id="errorPassword"></span>
                </div>
            </div>
            <div class="form-group">
                <label>Ghi chú:</label>
                @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", @rows = "5" })
            </div>
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                </div>
                <div class="col-md-6 text-right">
                    <a href="javascript:;" onclick="getEmployees()" class="btn btn-warning">
                        <i class="fa fa-window-close"></i> Bỏ qua
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $(function () {
        //Date picker
        $('#datepicker').datepicker({
            autoclose: true
        })
    })
</script>
