@model LiteCommerce.Admin.Models.ShipperPaginationQueryResult
@{
    Layout = null;
}

<div class="container-fluid">
    <div class="text-left">
        <p>&emsp; Có tất cả <strong>@Model.RowCount</strong> nhà vận chuyển. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>
    </div>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th class="col-lg-6">Tên loại nhà vận chuyển</th>
                <th>Điện thoại</th>
                <th class="text-right">
                    <a href="javascript:;" onclick="addShipper()" class="btn btn-xs btn-primary">
                        <i class="fa fa-plus"></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Item in Model.Data)
            {
                <tr>
                    <td>@Item.ShipperName</td>
                    <td>@Item.Phone</td>
                    <td class="text-right">
                        <a href="javascript:;" onclick="editShipper(@Item.ShipperID)" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="javascript:;" onclick="deleteShipper(@Item.ShipperID)" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <ul class="pagination">
            @for (int page = 1; page <= Model.PageCount; page++)
            {
                if (page == Model.Page)
                {
                    <li class="active"><a href="javascript:;">@page</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="getShippers(@page)">@page</a></li>
                }
            }
        </ul>
    </div>
</div>
