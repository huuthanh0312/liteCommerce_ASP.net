@model LiteCommerce.Admin.Models.CategoryPaginationQueryResult
@{
    Layout = null;
}

<!-- Form hiển thị dữ liệu-->
<div class="container-fluid">
    <div class="text-left">
        <p>&emsp; Có tất cả <strong>@Model.RowCount</strong> loại hàng hóa. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>
    </div>
    <br />
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th class="col-lg-3">Tên loại hàng hóa</th>
                <th class="col-lg-5">Mô tả thông tin loại hàng hóa</th>
                <th>Thuộc loại hàng hóa</th>
                <th class="text-right">
                    <a href="javascript:;" onclick="addCategory()" class="btn btn-xs btn-primary">
                        <i class="fa fa-plus"></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Item in Model.Data)
            {
                <tr>
                    <td>@Item.CategoryName</td>
                    <td>@Item.Description</td>
                    <td>@Item.ParentCategoryId</td>
                    <td class="text-right">
                        <a href="javascript:;" onclick="editCategory(@Item.CategoryID)" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="javascript:;" onclick="deleteCategory(@Item.CategoryID)" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <ul class="pagination">
            @for (int page = 1; page <= Model.PageCount; page++)
            {
                if (page == Model.Page)
                {
                    <li class="active"><a href="javascript:;">@page</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="getCategories(@page)">@page</a></li>
                }
            }
        </ul>
    </div>
</div>

