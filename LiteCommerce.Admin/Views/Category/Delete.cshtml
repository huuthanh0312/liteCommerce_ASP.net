@model LiteCommerce.DomainModels.Category
@{
    Layout = null;
}

<form class="form-horizontal" onsubmit="return (confirmDeleteCategory(@Model.CategoryID));">
    <div class="form-group">
        <label class="control-label col-sm-2">Tên loại hàng hóa:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CategoryName</p>
        </div>

        <label class="control-label col-sm-2">Mô tả loại hàng hóa:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Description</p>
        </div>

        <label class="control-label col-sm-2">Thuộc loại hàng hóa:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.ParentCategoryId</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-offset-2 col-sm-10">
            <p class="text-danger" style="font-size:18px">
                Bạn có chắc chắn muốn xóa loại hàng hóa này khỏi hệ thống hay không?
            </p>
        </div>
        <div class="col-lg-offset-2 col-sm-10">
            <button class="btn btn-danger">Đồng ý xóa</button>
            <a href="javascript:;" onclick="getCategories(1)" class="btn btn-warning">Bỏ qua</a>
        </div>
    </div>
</form>


